<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="400.0">
         <top>
            <Label fx:id="lblLogin" text="Login" textFill="#ee0606" BorderPane.alignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </top>
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="lblEmail" layoutX="81.0" layoutY="66.0" text="e-mail" />
                  <TextField fx:id="txtEmail" layoutX="126.0" layoutY="62.0" promptText="Inserisci e-mail" />
                  <PasswordField fx:id="txtPassword" layoutX="126.0" layoutY="101.0" promptText="Password" />
                  <Label fx:id="lblPassword" layoutX="65.0" layoutY="105.0" text="Password" />
                  <Button fx:id="btnAccedi" layoutX="174.0" layoutY="158.0" mnemonicParsing="false" onAction="#Login" text="Accedi" />
                  <Button fx:id="btnRegistrati" layoutX="167.0" layoutY="288.0" mnemonicParsing="false" onAction="#Registrati" text="Registrati" />
                  <Label layoutX="93.0" layoutY="260.0" text="Non sei ancora registrato? registrati ora!" />
                  <Label fx:id="lblStatus" layoutX="14.0" layoutY="334.0" text="Status..." />
               </children>
            </Pane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
